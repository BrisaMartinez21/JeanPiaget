@model JeanPiaget.Web.Models.Pagos.PagoConsultarVM

@{
    ViewData["Title"] = "Pagos/Consultar";
}
<div class="container" style="margin-top: 5%; background: #FFF;">
    <div class="card-header" style="background: #425444; color: #fff;">
        <h1 class="h1 ContImagen">Pagos de @Model.Alumno.Nombre @Model.Alumno.Paterno @Model.Alumno.Materno</h1>
    </div>

    <br>
    @if(Model.Pagos!= null && Model.Pagos.Count > 0)
    {
        <div class="row mb-3">
            @foreach(var pago in Model.Pagos)
            {
                <div class="col">
                    <div class="card cartas mb-3" style="max-width: 18rem;">
                        <div class="card-header bg-transparent cartastitulo">@pago.Concepto</div>
                        <div class="card-body">
                            <p class="card-text">
                                <ul>
                                    <li><strong>Monto: @pago.Monto</strong></li>
                                    <li>Folio: @pago.Folio</li>
                                    <li>Referencia: @pago.Referencia</li>
                                    <li>Fecha de pago: @pago.FechaPago.ToString("dd-MM-yyyy")</li>
                                </ul>
                            </p>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-controller="Recibo" asp-action="ImprimirPago" asp-route-pagoId="@pago.Id">
                                    <button type="button" class="btn btn-sm"
                                            style="background: #425444; color: #fff;">
                                        Imprimir
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h1 class="h1 ContImagen">**Este alumno no tiene pagos registrados este año**</h1>
    }
</div>