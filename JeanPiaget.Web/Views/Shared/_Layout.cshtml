<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - JeanPiaget</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
        @RenderSection("Head", false)
    </head>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logoSinFondo.png" alt="Logo" width="50" height="50">
                    <span class="text-light" style="margin-left:10px; margin-right:10px">Jean Piaget</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="menu">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Materias
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a asp-controller="Materia" asp-action="Index" class="dropdown-item">Listar Materias</a></li>
                                <li><a asp-controller="Materia" asp-action="Create" class="dropdown-item">Nueva Materia</a></li>
                                <li><a asp-controller="Materia" asp-action="Grados" class="dropdown-item">Listar Grados</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pagos
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a asp-controller="Pago" asp-action="Index" class="dropdown-item">Listar Pagos</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Alumnos
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a asp-controller="Alumno" asp-action="Index" class="dropdown-item">Lista Alumnos</a><li>
                                <li><a asp-controller="Alumno" asp-action="Create" class="dropdown-item">Nuevo Alumno</a></li>
                            </ul>
                        </li>
                    </ul>




                    <hr class="d-md-none text-white-50">
                    <!-- Profile Dropdown Items -->
                    <ul class="navbar-nav  flex-row flex-wrap text-light">
                        <li class="nav-item dropdown pe-3">
                            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">

                                <span class="d-none d-md-block dropdown-toggle ps-2">@User.Identity?.Name</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header">
                                    <h6>@User.Identity?.Name</h6>
                                    <span>Usuario logeado</span>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li>
                                <a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="Descripcion" asp-route-name="@User.Identity?.Name">
                                        <i class="bi bi-person"></i>
                                        <span>Mi cuenta</span>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                @if (User.IsInRole("Root"))
                                {
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="Index">
                                            <i class="bi bi-gear"></i>
                                            <span>Administrar usuarios</span>
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                }


                                <li>
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout">
                                        <button class="dropdown-item d-flex align-items-center" type="submit">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <span>Sign Out</span>
                                        </button>
                                    </form>

                                </li>

                            </ul><!-- End Profile Dropdown Items -->
                        </li>
                        <!-- End Profile Nav -->
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <body class="BodyStyle">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </body>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JeanPiaget.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>
