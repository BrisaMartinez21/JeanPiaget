@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

@model JeanPiaget.Web.Models.LoginModel

<section class="vh-100 BasePrincipal">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="flex-column col-md-6 col-lg-4 d-none d-md-block VerdeBase ContImagen">
                            <img class=" image" src="~/images/logoSinFondo.png" style="border-radius: 1rem 1 1 1rem;" />                                 
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-action="Login">
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">Panel Gestor de Alumnos</span>
                                    </div>

                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresa al panel</h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" asp-for="Email" id="form2Example17" class="form-control form-control-lg" />
                                        <label asp-for="Email" class="form-label" for="form2Example17">Email/UserName</label>
                                        <br>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" asp-for="Password" id="form2Example27" class="form-control form-control-lg" />
                                        <label asp-for="Password" class="form-label" for="form2Example27">Contraseña</label>
                                        <br>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">
                                            Ingresar
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>